<% layout("layouts/boilerPlate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-lg-2 offset-md-2 offset-sm-2 ">
    <h3>Edit your Listing</h3>
    <form method="post" action="/listings/<%= data._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" type="text" class="form-control" value="<%- data.title %>" required>
            <div class="invalid-feedback">Title should be valid</div>
            
        </div>

        <div class="mb-3">
            <label for="desciption" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control"><%= data.description %></textarea required>
                <div class="invalid-feedback">Description should be valid</div>
        </div>
        <div class="mb-3">
            <p>Original Image</p>
            <img src="<%= data.image.url %>" alt="Original-image">
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image
            </label>
            <input name="listing[image]"  class="form-control" type="file">
            <div class="invalid-feedback">Upload New Image</div>
        </div>
        
        <div class="row">

        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price
            </label>
            <input name="listing[price]" class="form-control" value="<%= data.price %>" type="number" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country
            </label>
            <input name="listing[country]" type="text" class="form-control" value="<%= data.country %>" required>
            <div class="invalid-feedback">Country should be valid</div>
        </div>
        </div>
       
        <div class="mb-3">
            <label for="location" class="form-label">Location
            </label>
            <input name="listing[location]" class="form-control" value="<%= data.location %>" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        
        
        
        <br>
        <button class="btn btn-dark edit-btn" type="submit">Edit</button>
    </form>
    </div>
    </div>
    <br><br>
</body>
